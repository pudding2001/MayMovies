        <div class="container">
            <div class="row row-sm-justify text-sm-left">
                <!-- Brand -->
                <a href="/" class="brand-name"><img src="/images/MayMovies.png" alt="MayMovies" style="margin-left: -8px;"></a>
                <!-- END Brand -->
            </div>

            <div class="row justify-content-center mt-4">
                <ul class="bottomnavlinks-list d-flex d-inline-flex">
                    <li><a class="font-weight-bold" href="#contact">Contact</a></li> |
                    <li><a class="font-weight-bold" href="#about">About</a></li> |
                    <li>
                        <a href="#facebook">
