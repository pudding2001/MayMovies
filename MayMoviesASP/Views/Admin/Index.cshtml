@model IEnumerable<MayMoviesASP.Models.Movie>

@{
    ViewData["Title"] = "Admin Panel";
}

<header class="main-header-navbar d-flex flex-row shadow-sm sticky-top">
    <div class="col-md-4">
        <div class="nav-logo m-3">
            <a href="/" class="brand-name"><img src="/images/MayMovies.png" alt="MayMovies" style="margin-left: 80px; margin-top: 3px;"></a>
        </div>
    </div>

    <div class="d-flex col-md-4">
        <div class="main-topnavlinks p-3 m-3">
            <a href="#change password">Change Password</a>
            <a class="active" href="#home">Home</a>
        </div>
    </div>

    <div class=" d-inline-flex col-md-4">
        <div class="main-topnavlinks p-2 m-3">
            <p style="font-size: 17px; color: darkgrey; font-weight: bold; display: inline-block;">Welcome admin &emsp; |</p>
            <a class="pl-4 m-0" href="#logout">Log out</a>
        </div>
    </div>
</header>

<main class="text-light font-weight-bold">
    <div class="m-5">
        <h1>Movie Home</h1>
        <hr>
        <a id="button-qlty" href="./AddMovie" type="submit">Add Movie</a>
        <button id="button-qlty" type="submit">Edit Movie</button>
        <button id="button-qlty" type="submit">Enable/Disable Movie</button>
    </div>

    <div class="m-5">
        <h3 style="background-color: #090911; padding: 20px;">Current Movie</h3>
        <div class="row justify-content-center mr-0 ml-0"
             style="background-color: #0f0f1dbd; padding: 20px; margin-top: -8px;">
            <div class="col-md-5">
                <form asp-action="SearchMovies" method="post" asp-controller="home">
                    <div class=" input-group-container p-1 bg-light rounded rounded-pill shadow-sm">
                        <div class="input-group">
                            <input name="searchText" type="text" id="searchText" placeholder="Search for a movie or an actor/actress..." class="form-control border-0">
                            <div class="input-group-append">
                                <button id="button-addon1" type="submit" class="btn btn-link text-primary"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="container ml-5 ">
            <h2 class="text-light p-3">Most popular movies</h2>
            <div class="d-flex flex-row flex-wrap">
                @foreach (var item in Model)
                {
                    <div class="col-md-3 col-sm-6 mb-2">
                        <a href="#" class="product">
                            <div class="pop-mov">
                                <img src="/images/@Html.DisplayFor(modelItem => item.Image)" alt="" width="250" height="300">
                            </div>
                            <div class="product__meta">
                                @{
                                    switch (item.Rating)
                                    {
                                        case 1:
                                            <span class="fa fa-star" style="color: rgb(31, 144, 236)"></span>
                                            <span class="fa fa-star-o" style="color: grey"></span>
                                            <span class="fa fa-star-o" style="color: grey"></span>
                                            <span class="fa fa-star-o" style="color: grey"></span>
                                            <span class="fa fa-star-o" style="color: grey"></span>
                                            break;
                                        case 2:
                                            <span class="fa fa-star" style="color: rgb(31, 144, 236)"></span>
                                            <span class="fa fa-star" style="color: rgb(31, 144, 236)"></span>
                                            <span class="fa fa-star-o" style="color: grey"></span>
                                            <span class="fa fa-star-o" style="color: grey"></span>
                                            <span class="fa fa-star-o" style="color: grey"></span>
                                            break;
                                        case 3:
                                            <span class="fa fa-star" style="color: rgb(31, 144, 236)"></span>
                                            <span class="fa fa-star" style="color: rgb(31, 144, 236)"></span>
                                            <span class="fa fa-star" style="color: rgb(31, 144, 236)"></span>
                                            <span class="fa fa-star-o" style="color: grey"></span>
                                            <span class="fa fa-star-o" style="color: grey"></span>
                                            break;
                                        case 4:
                                            <span class="fa fa-star" style="color: rgb(31, 144, 236)"></span>
                                            <span class="fa fa-star" style="color: rgb(31, 144, 236)"></span>
                                            <span class="fa fa-star" style="color: rgb(31, 144, 236)"></span>
                                            <span class="fa fa-star" style="color: rgb(31, 144, 236)"></span>
                                            <span class="fa fa-star-o" style="color: grey"></span>
                                            break;
                                        case 5:
                                            <span class="fa fa-star" style="color: rgb(31, 144, 236)"></span>
                                            <span class="fa fa-star" style="color: rgb(31, 144, 236)"></span>
                                            <span class="fa fa-star" style="color: rgb(31, 144, 236)"></span>
                                            <span class="fa fa-star" style="color: rgb(31, 144, 236)"></span>
                                            <span class="fa fa-star-o" style="color: rgb(31, 144, 236)"></span>
                                            break;
                                        default:
                                            <span class="fa fa-star-o" style="color:grey"></span>
                                            <span class="fa fa-star-o" style="color: grey"></span>
                                            <span class="fa fa-star-o" style="color: grey"></span>
                                            <span class="fa fa-star-o" style="color: grey"></span>
                                            <span class="fa fa-star-o" style="color: grey"></span>
                                            break;
                                    }
                                }
                                <p>@Html.DisplayFor(modeItem => item.Name)</p>
                                <p class="big">@Html.DisplayFor(modelItem => item.Genre)</p>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</main>